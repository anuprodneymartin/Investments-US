<!DOCTYPE html>
<html>
  <head>
    <title>Stock Investments</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="div-1">
        <%= button_to 'Home', root_path, :method => 'get' %> 
        <%= button_to 'Sign in', login_path, :method => 'get' %>
        <%= button_to 'Investmens', :method => 'get' %>
        <%= button_to 'Knowledge centre', :method => 'get' %>
        <% if @current_user.present? %>
          <%= button_to 'Logout', :method => 'get' %>
        <% else %>
          <%= button_to 'Sign Up to Our Investment Insights', new_user_path, :method => 'get' %>
        <% end %>
      </div class="div-1">
      </nav>



    <%= yield %>
  </body>
</html>
